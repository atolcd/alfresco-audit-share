<mapper namespace="alfresco.atolcd.audit.special-queries">
  <select id="selectByMostUpdated" parameterType="AtolAuditQueryParameters" resultMap="alfresco.atolcd.audit.results_AtolAuditObjectPopularity">
    <if test="limit != 0">
      select *
      FROM (select <include refid="alfresco.atolcd.audit.selectByMostUpdated_snippet"/>)
      where rownum &lt;= ${limit}
      ORDER BY rownum
    </if>
    <if test="limit == 0">
      select <include refid="alfresco.atolcd.audit.selectByMostUpdated_snippet"/>
    </if>
  </select>

  <select id="selectByMostRead" parameterType="AtolAuditQueryParameters" resultMap="alfresco.atolcd.audit.results_AtolAuditObjectPopularity">
    <if test="limit != 0">
      select *
      FROM (select <include refid="alfresco.atolcd.audit.selectByMostRead_snippet"/>)
      where rownum &lt;= ${limit}
      ORDER BY rownum
    </if>
    <if test="limit == 0">
      select <include refid="alfresco.atolcd.audit.selectByMostRead_snippet"/>
    </if>
  </select>
</mapper>